<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sole.ray.distributed.tx.consumer.dao.ConsumerDao">

    <resultMap id="BaseResultMap" type="com.sole.ray.distributed.tx.consumer.entity.Consumer">
        <!--@Table consumer-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="cName" column="c_name" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
        <result property="ismale" column="ismale" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, c_name, age, ismale
        from consumer
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, c_name, age, ismale
        from consumer
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, c_name, age, ismale
        from consumer
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="cName != null and cName != ''">
                and c_name = #{cName}
            </if>
            <if test="age != null">
                and age = #{age}
            </if>
            <if test="ismale != null">
                and ismale = #{ismale}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into consumer(id, c_name, age, ismale)
        values (#{id}, #{cName}, #{age}, #{ismale})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update consumer
        <set>
            <if test="cName != null and cName != ''">
                c_name = #{cName},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="ismale != null">
                ismale = #{ismale},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from consumer where id = #{id}
    </delete>

</mapper>